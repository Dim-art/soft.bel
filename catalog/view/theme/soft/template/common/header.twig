<!DOCTYPE html>
<!--[if IE]><![endif]-->
<!--[if IE 8 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie8"><![endif]-->
<!--[if IE 9 ]><html dir="{{ direction }}" lang="{{ lang }}" class="ie9"><![endif]-->
<!--[if (gt IE 9)|!(IE)]><!-->
<html dir="{{ direction }}" lang="{{ lang }}">
<!--<![endif]-->
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<title>{{ title }}</title>
<base href="{{ base }}" />
{% if description %}
<meta name="description" content="{{ description }}" />
{% endif %}
{% if keywords %}
<meta name="keywords" content="{{ keywords }}" />
{% endif %}
<script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen" />
<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css" />

<link href="catalog/view/theme/soft/stylesheet/stylesheet.css" rel="stylesheet">
{% for style in styles %}
<link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}" />
{% endfor %}
{% for script in scripts %}
<script src="{{ script }}" type="text/javascript"></script>
{% endfor %}
<script src="catalog/view/javascript/common.js" type="text/javascript"></script>
{% for link in links %}
<link href="{{ link.href }}" rel="{{ link.rel }}" />
{% endfor %}
{% for analytic in analytics %}
{{ analytic }}
{% endfor %}
</head>
<body>
    {# header #}
    <header class="header">

        <div class="container">
            <div class="row">

                <div class="header__nav" id="top">
                    
                    {# nav-left #}
                    <div class="col-sm-6">
                    
                        <nav class="nav nav_left pull-left" id="top-links">

                            <ul class="nav__menu list-inline">
                                <li class="nav__item dropdown">
                                    <a class="nav__link dropdown-toggle" href="{{ account }}" title="{{ text_account }}" data-toggle="dropdown"><span class="hidden-xs hidden-sm hidden-md">{{ text_account }}</span> <span class="caret"></span></a>
                                        <ul class="dropdown-menu dropdown-menu-right">
                                            {% if logged %}
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ account }}">{{ text_account }}</a>
                                            </li>
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ order }}">{{ text_order }}</a>
                                            </li>
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ download }}">{{ text_download }}</a>
                                            </li>
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ transaction }}">{{ text_transaction }}</a>
                                            </li>
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ logout }}">{{ text_logout }}</a>
                                            </li>
                                            {% else %}
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ register }}">{{ text_register }}</a>
                                            </li>
                                            <li class="dropdown-menu__item">
                                                <a class="dropdown-menu__link" href="{{ login }}">{{ text_login }}</a>
                                            </li>
                                            {% endif %}
                                        </ul>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ wishlist }}" id="wishlist-total" title="{{ text_wishlist }}"><span class="hidden-xs hidden-sm hidden-md">{{ text_wishlist }}</span></a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ shopping_cart }}" title="{{ text_shopping_cart }}"><span class="hidden-xs hidden-sm hidden-md">{{ text_shopping_cart }}</span></a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ checkout }}" title="{{ text_checkout }}"><span class="hidden-xs hidden-sm hidden-md">{{ text_checkout }}</span></a>
                                </li>
                                <li class="nav__item">
                                    <a class="nav__link" href="{{ contact }}"></a> <span class="hidden-xs hidden-sm hidden-md">{{ telephone }}</span>
                                </li>
                            </ul>

                        </nav>
                    
                    </div>
                    
                    {# nav-right #}
                    <div class="col-sm-6">
                    
                        <nav class="nav nav_right pull-right">   
                        
                            <ul class="nav__menu list-inline">
                                <li class="nav__item"> {{ currency }} </li>
                                <li class="nav__item"> {{ language }} </li>
                            </ul>
                        
                        </nav>

                    </div>

                </div>
            </div>

            <div class="row">       
            
                <div class="header__title">

                    {# search #}
                    <div class="col-xs-3">
                    
                        <div class="search"> {{ search }} </div>
                        
                    </div>

                    {# logo #}
                    <div class="col-xs-6">

                        <div class="logo" id="logo">
                            {% if logo %}
                            <a class="logo__link" href=" {{ home }} ">
                                <img class="logo__img img-responsive" src=" {{ logo }} " title=" {{ name }} " alt=" {{ name }} " />
                            </a>
                            {% else %}
                            <h1 class="logo__title">
                                <a class="logo__link" href="{{ home }}">{{ name }}</a>
                            </h1>
                            {% endif %}
                        </div>

                    </div>

                    {# cart #}
                    <div class="col-xs-3">
                    
                        <div class="cart"> {{ cart }} </div>
                        
                    </div>

                </div>
            </div>

            <div class="row">
                
                <div class="header__navbar">

                    {# navbar #}
                    <div class="col-sm-12">

                        <nav class="navbar"> {{ menu }} </nav> 

                    </div>
                    
                </div>
        
            </div>
        </div>

    </header>

    
